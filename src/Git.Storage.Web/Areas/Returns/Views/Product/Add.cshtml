@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="zh" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="zh" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="zh">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    @Html.Partial("_Title")
    @Html.Raw(ViewBag.CssFile)
</head>
<body class="fixed-top">
    @Html.Partial("_Top")
    <div id="container" class="row-fluid @ViewBag.MenuStatus">
        @Html.Partial("_LeftMenu")
        <div id="body">
            <div id="widget-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button"></button>
                    <h3>widget Settings</h3>
                </div>
                <div class="modal-body">
                    <p>Here will be a configuration form</p>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">
                        @Html.Raw(ViewBag.NavMenu)
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="widget box light-grey">
                            <div class="widget-title">
                                <h4><i class="icon-globe"></i>新增产品退货</h4>
                                <div class="tools">
                                    <a href="javascript:;" class="collapse"></a>
                                    <a href="#widget-config" data-toggle="modal" class="config"></a>
                                    <a href="javascript:;" class="reload"></a>
                                    <a href="javascript:;" class="remove"></a>
                                </div>
                            </div>
                            <div class="widget-body">
                                <div class="row-fluid" style="border: 1px solid #DDDDDD;">
                                    <div class="widget-body form">
                                        <form class="horizontal-form">
                                            <div class="row-fluid">
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtOrderNum">退货单号</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtOrderNum" name="txtOrderNum" class="span12" placeholder="可不填,自动生成" disabled="disabled" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="ddlOutType">退货类型</label>
                                                        <div class="controls">
                                                            <select id="ddlOutType" name="ddlOutType" class="span12">
                                                                @Html.Raw(ViewBag.ReturnType)
                                                            </select>
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <!--control-group error-->
                                                        <label class="control-label" for="txtContractOrder">关联订单号</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtContractOrder" name="txtContractOrder" class="span12" placeholder="" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtOrderTime">制单日期</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtOrderTime" name="txtOrderTime" class="span12" placeholder="" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtCusNum">客户编号</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtCusNum" name="txtCusNum" class="span12" readonly="readonly" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtCusName">客户名称</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtCusName" name="txtCusName" class="span12" readonly="readonly" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtAddress">客户地址</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtAddress" name="txtAddress" class="span12" readonly="readonly" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <!--control-group error-->
                                                        <label class="control-label" for="txtCusPhone">客户联系方式</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtCusPhone" name="txtCusPhone" class="span12" readonly="readonly" placeholder="">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtContactName">联系人</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtContactName" name="txtContactName" readonly="readonly" class="span12" placeholder="">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtCrateUser">制单人</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtCrateUser" name="txtCrateUser" class="span12" placeholder="" value="@ViewBag.CurrentLoginUser.UserName">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtRemark">备注</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtRemark" name="txtRemark" class="span12" placeholder="">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3" style="display:none;">
                                                    <div class="control-group">
                                                        <label class="control-label" for="ddlProductType">产品类型</label>
                                                        <div class="controls">
                                                            <select id="ddlProductType" name="ddlProductType" class="span12" disabled="disabled">
                                                                @Html.Raw(ViewBag.ProductType)
                                                            </select>
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <br />
                                <table class="table table-striped table-bordered table-hover" id="tabInfo">
                                    <thead>
                                        <tr class="widget-title">
                                            <th colspan="11">
                                                <div class="row-fluid" id="mypager">
                                                </div>
                                            </th>
                                        </tr>
                                        <tr class="widget-title">
                                            <th style="width: 8px;"><input type="checkbox" class="group-checkable" onclick="ReturnOrder.SelectAll(this)" /></th>
                                            <th class="hidden-480">产品编码</th>
                                            <th class="hidden-480">产品条码</th>
                                            <th class="hidden-480">产品名称</th>
                                            <th class="hidden-480">批次</th>
                                            <th class="hidden-480">库位名称</th>
                                            <th class="hidden-480">出库数量</th>
                                            <th class="hidden-480">退货数量</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        
                                    </tbody>
                                </table>
                                <div class="form-actions formBtn">
                                    <button type="submit" class="btn btn-primary" onclick="ReturnOrder.Create()"><i class="icon-ok"></i>保存</button>
                                    <button type="button" class="btn">取消</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Foot")
    <script type="text/javascript">
        $(document).ready(function () {
            ReturnOrder.Load();
        });
    </script>
</body>

</html>
